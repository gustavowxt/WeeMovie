<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/empty_state_image_order_confirmation"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/empty_state_text_order_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compra realizada com sucesso"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@id/empty_state_image_order_confirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/backToHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar Ã  home"
        android:layout_below="@id/empty_state_text_order_confirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
